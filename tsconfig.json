{
  "extends": "./node_modules/adonis-preset-ts/tsconfig",
  "include": ["**/*"],
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "typeRoots": ["@adonisjs/core/build/adonis-typings/index.d.ts"],
    "paths": {
      "App/*": ["./app/*"],
      "Config/*": ["./config/*"],
      "Contracts/*": ["./contracts/*"],
      "Database/*": ["./database/*"]
    },
    "types": ["@adonisjs/core/**/*.d.ts", "@adonisjs/repl/**/*.d.ts", "@adonisjs/core/build/adonis-typings/index.d.ts"]
  }
}
